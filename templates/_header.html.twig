                <li class="nav-item">
                    {% if app.user %}
                        {{ app.user.email }}
                        <a href="{{ path('app_logout') }}" class="nav-link"> Se déconnecter</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="nav-link"> Se connecter</a>
                    {% endif %}
                </li>

            </ul>
            {{ render(controller('App\\Controller\\DefaultController::navbarSearch')) }}
        </div>
