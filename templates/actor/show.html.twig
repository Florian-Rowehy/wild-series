{% extends '/base.html.twig' %}

{% block title %}Actor #{{ actor.id }}{% endblock %}

{% block body %}
    <h1>Page {{ actor.id }} </h1>
    <div class="media">
        <div class="media-body">
            <h2 class="mt-0">{{ actor.name }}</h2>
            <ul>A joué dans:
                {% for program in actor.programs %}
                    <li>
                        <a href="{{ path('program_show', {slug: program.slug}) }}">{{ program.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('actor_index') }}">
        Retour à la liste des acteurs
    </a>
{% endblock %}