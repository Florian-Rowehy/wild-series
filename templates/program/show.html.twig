{% extends '/base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <h1>Page {{ program.id }} </h1>
    <div class="media">
        <img
                class="align-self-start mr-3 film-poster"
                src="{{program.poster}}"
                alt="{{ program.title }} poster"
        >
        <div class="media-body">
            <h2 class="mt-0">{{ program.title }}</h2>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <p>
                {% for season in seasons %}
                    <a href="{{ path('program_season_show', {programId: program.id, seasonId:season.id}) }}">Saison {{ season.number }}</a>
                {% endfor %}
            </p>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}