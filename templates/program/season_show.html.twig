{% extends '/base.html.twig' %}

{% block title %}Série #{{ program.id }} Saison#{{ season.id }}{% endblock %}

{% block body %}
    <h1>{{ program.title }} </h1>
    <div class="media">
        <img
                class="align-self-start mr-3 film-poster"
                src="{{program.poster}}"
                alt="{{ program.title }} poster"
        >
        <div class="media-body">
            <h2 class="mt-0">Saison {{ season.number}} de {{ program.title }}</h2>
            <p>{{ season.description }}</p>
            <ul>Liste des épisodes:
                {% for episode in episodes %}
                    <li>
                        <a href="#">Episode {{ episode.number }}: {{ episode.title }}</a>
                    </li>
                {% endfor %}

            </ul>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}